<table class="table">
  <thead>
    <tr>
      <th scope="col">Id</th>
      <th scope="col">Name</th>
      <th scope="col">Status</th>
      <th scope="col">Category</th>
      <th scope="col">Delete</th>
    </tr>
  </thead>
  <tbody>
      {% for value in pets %}
        <tr>

          <td><a class="nav-link" href="?page=edit&id={{ value.id }}">{{ value.id }}</a></td>
          <td>{{ value.name }}</td>
          <td>{{ value.status }}</td>
          <td>{{ value.category|json_encode() }}</td>
          <td><a class="nav-link" href="?page=delete&id={{ value.id }}">Delete</a></td>
        </tr>
      {% endfor%}
  </tbody>
</table>
